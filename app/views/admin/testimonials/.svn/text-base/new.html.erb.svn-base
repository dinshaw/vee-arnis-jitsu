<% @content_heading = "New testimonial" %>
<p><%= link_to 'Back', admin_testimonials_path %></p>
<%= error_messages_for :testimonial %>

<% form_for([:admin,@testimonial]) do |f| %>
  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Description</b><br />
    <%= f.text_area :description %>
  </p>

  <p>
    <b>Teaser</b><br />
    <%= f.text_area :teaser %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>


