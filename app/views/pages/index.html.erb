<% @content_heading = "Listing pages" %>
<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Position</th>
    <th>Meta description</th>
    <th>Meta keyword</th>
  </tr>

<% for page in @pages %>
  <tr>
    <td><%=h page.title %></td>
    <td><%=h page.body %></td>
    <td><%=h page.position %></td>
    <td><%=h page.meta_description %></td>
    <td><%=h page.meta_keyword %></td>
    <td><%= link_to 'Show', page %></td>
    <td><%= link_to 'Edit', edit_page_path(page) %></td>
    <td><%= link_to 'Destroy', page, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New page', new_page_path %>
