<% @content_heading = "Editing faq" %>

<p><%= link_to 'Show', admin_faq_category_faq_path(@faq_category, @faq) %> | <%= link_to 'Back', admin_faq_category_faqs_path(@faq_category) %></p>

<% form_for([:admin, @faq_category, @faq]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :question %><br />
    <%= f.text_field :question %>
  </p>
  <p>
    <%= f.label :answer %><br />
    <%= f.text_area :answer %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>


