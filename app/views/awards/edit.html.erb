<% @content_heading = "Edit Award" %>

<%= error_messages_for :award %>

<div class="article_img">
	<%= image_tag(@award.photo.public_filename) if @award.photo %>
</div>


<% form_for(@award, :html => { :multipart => true } ) do |f| %>
  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Description</b><br />
    <%= f.text_area :description %>
  </p>

  <p>
    <b>Url</b><br />
    <%= f.text_field :url %>
  </p>

  <p>
    <b>Date</b><br />
    <%= f.date_select :date %>
  </p>
	
  <p>
    <b>Photo</b><br />
    <%= f.file_field :uploaded_photo_data %>
  </p>

  <p>
    <%= label :system, :remove_photo, "Remove Photo", :class => "left" %>
    <%= f.check_box :remove_photo %>
  </p>

<br class='clear' />
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @award %> |
<%= link_to 'Back', awards_path %>
