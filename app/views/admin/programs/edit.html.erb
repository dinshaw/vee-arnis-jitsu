<% @content_heading = "Editing program" %>
<p><%= link_to 'Show', admin_program_path(@program) %> | <%= link_to 'Back', admin_programs_path %></p>
<%= error_messages_for :program %>

<% form_for([:admin,@program], :html => {:multipart => true}) do |f| %>
  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Description</b><br />
    <%= f.text_area :description %>
  </p>

<p>
	<b>Photo</b><br />
	<%= f.file_field :uploaded_data_photo %>
</p>


	<% if !@program.attachments.photo.nil? %>
		<%= image_tag @program.attachments.photo.public_filename(:thumb)  %>
		<p>
			<%= label :system, :remove_photo, "Remove Photo", :class => "left" %>
			<%= f.check_box :remove_photo %>
		</p>
	<% end %>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>


