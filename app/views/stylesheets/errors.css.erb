p#flash{color:green;text-align:center;background-color:aqua;border:1px solid green;margin-bottom:10px;}


.fieldWithErrors {
  padding: 2px;
  background-color: red;
  display: table;
}

#errorExplanation {
  width: 400px;
  border: 2px solid red;
  margin-bottom: 20px;
  background-color: #f0f0f0;
}

#errorExplanation h2 {
  text-align: left;
  font-weight: bold;
  padding: 5px 5px 5px 15px;
  font-size: 12px;
  background-image: none;
  background-color: #c00;
  color: #fff;
}

#errorExplanation p {
  color: #333;
}

#errorExplanation ul li {
  font-size: 12px;
  list-style: square;
  margin:0 2em;
}

