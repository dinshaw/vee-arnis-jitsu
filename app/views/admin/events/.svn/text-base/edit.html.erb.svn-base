<% @content_heading = "Editing event" %>
<p><%= link_to 'Back', admin_events_path %></p>
<%= error_messages_for :event %>

<% form_for([:admin,@event]) do |f| %>
  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Description</b><br />
    <%= f.text_area :description %>
  </p>

  <p>
    <b>Start</b><br />
    <%= f.datetime_select :starts_at %>
  </p>

  <p>
    <b>End</b><br />
    <%= f.datetime_select :ends_at %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>


