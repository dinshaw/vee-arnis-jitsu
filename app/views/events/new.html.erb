<% @content_heading = "New Event" %>


<%= error_messages_for :event %>

<% form_for(@event) do |f| %>
  <p>
    <b>Start</b><br />
    <%= f.datetime_select :start %>
  </p>

  <p>
    <b>End</b><br />
    <%= f.datetime_select :end %>
  </p>

  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Description</b><br />
    <%= f.text_area :description %>
  </p>

  <p>
    <b>Instructor</b><br />
    <%= f.text_field :instructor %>
  </p>
<br />
  <p>
	<%= f.check_box :is_weekly_class, :class => :left %>
    <b>Is weekly class</b>
  </p>

<br class="clear" />
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', events_path %>
