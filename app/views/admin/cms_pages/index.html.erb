<% @content_heading = "Listing pages" %>
<p><%= link_to 'New Page', new_admin_cms_page_path %></p>
<table>
<thead>
  <tr>
    <th>Reference string</th>
	<th>Nav Text</th>
    <th>Title</th>
 	<th>Child Of</th>
    <th>Position</th>
	<th colspan="3"></th>
	<th>Thumbnail</th>	
  </tr>
</thead>
<tbody>
<% @cms_pages.each do |page| %>
  <tr class="<%= cycle "even", "odd" %>">
    <td><%=h page.reference_string %></td>
    <td><%=h page.nav_text %></td>
    <td><%= page.title %></td>
	<td><%=h page.parent.reference_string if !page.parent.nil? %></td>
    <td><%= position_links(page) %></td>
    <td><%= link_to 'Show', admin_cms_page_path(page) %></td>
    <td><%= link_to 'Edit', edit_admin_cms_page_path(page) %></td>
    <td><%= link_to 'Destroy', admin_cms_page_path(page), :confirm => 'Are you sure?', :method => :delete %></td>
	<td><%= image_tag page.img_main.public_filename(:thumb) if page.img_main %></td>
  </tr>
<% end %>
</tbody>
</table>

