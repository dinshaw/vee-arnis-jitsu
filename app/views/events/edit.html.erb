<% @content_heading = @event.title %>

<%= error_messages_for :event %>

<% form_for(@event) do |f| %>
  <p>
    <b>Start</b><br />
    <%= f.datetime_select :start %>
  </p>

  <p>
    <b>End</b><br />
    <%= f.datetime_select :end %>
  </p>

  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Description</b><br />
    <%= f.text_area :description %>
  </p>

  <p>
    <b>Instructor</b><br />
    <%= f.text_field :instructor %>
  </p>

  <p>
    <%= f.check_box :is_weekly_class, :class => :left %>
    <b>Is weekly class</b><br />

  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @event %> |
<%= link_to 'Back', events_path %>
