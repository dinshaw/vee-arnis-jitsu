<% @content_heading = "New select_option" %>

<% form_for([:admin,@select_option]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :display_name %><br />
    <%= f.text_field :display_name %>
  </p>
  <p>
    <%= f.label :select_option_value %><br />
    <%= f.text_field :select_option_value %>
  </p>
  <p>
    <%= f.label :parent_id %><br />
    <%= f.collection_select :parent_id, SelectOption.all, :id, :display_name, :include_blank => "No parent" %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', admin_select_options_path %>
