<% @content_heading = "Programs" %>

<% for program in @programs %>
<div class="program">
	<h3><%=h program.title %></h3>
	
	<div class="article_img <%= cycle('right','left') %>">
		<%= image_tag(program.photo.public_filename(:mid)) if program.photo %>
	</div>
	
	<%= program.description %>

</div>

<br class="clear" />
<% end %>
