<% @content_heading = "Editing email" %>

<p><%= link_to 'Show', admin_email_path(@email) %> | <%= link_to 'Back', admin_emails_path %></p>

<% form_for([:admin,@email]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :subject %><br />
    <%= f.text_field :subject %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>


