<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
	<meta http-equiv="content-type" content="text/html;charset=UTF-8" />
	<title><%= SITE_NAME %> Admin Area | <%= @controller.controller_name %></title>
	<%= meta "description", meta_description %> 
	<%= meta "keywords", meta_keywords %> 
	
	<%= javascript_include_tag "application"  %>
	<%= stylesheet_link_tag 'main', 'admin', 'errors', 'tables', 'forms', 'lists', 'typography', 'nav' %>
	
	<%= render :partial => "shared/tinymce" %>
</head>
<body>
	<div id="canvas">

		<div id="masthead">
			<h1>Admin Area - <%= RAILS_ENV %></h1>
			<p><%= link_to "Public Site", root_path %></p>
