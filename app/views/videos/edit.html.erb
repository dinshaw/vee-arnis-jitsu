<% @content_heading = "Edit Video for: #{@video_category.title}" %>

<%= error_messages_for :video %>

<% form_for([@video_category, @video]) do |f| %>
  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Description</b><br />
    <%= f.text_area :description %>
  </p>

  <p>
    <b>File Name</b><br />
    <%= f.text_field :file_path %>
  </p>
 
<!--
  <p>
    <b>Parent</b><br />
    <%= f.collection_select :parent_id, Video.find(:all), :id, :title %>
  </p> -->

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', video_category_video_path(@video_category,@video) %> |
<%= link_to 'Back', video_categories_path %>
