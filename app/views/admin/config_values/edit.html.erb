<% @content_heading = "Editing config_value" %>
<p><%= link_to 'Back', admin_config_values_path %></p>
<% form_for([:admin,@config_value]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :value %>
    <%= f.text_field :value %>
  </p>
  <p><%= f.check_box :sys_var, :class => :left %><%= f.label :sys_var %></p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>



