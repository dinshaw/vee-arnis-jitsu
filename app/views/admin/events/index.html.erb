<% @content_heading = "Listing events" %>
<p><%= link_to 'New event', new_admin_event_path %></p>
<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Start</th>
    <th>End</th>
  </tr>

<% for event in @events %>
  <tr>
    <td><%=h event.title %></td>
    <td><%= event.description %></td>
    <td><%=h event.starts_at %></td>
    <td><%=h event.ends_at %></td>
    <td><%= link_to 'Edit', edit_admin_event_path(event) %></td>
    <td><%= link_to 'Destroy', admin_event_path(event), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />


